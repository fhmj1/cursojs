<%- include('includes/head') %>
<%- include('includes/nav') %>

<div class="container">
  <div class="row text-center">
    <div class="col-lg-12 my-2">
      <h1>Bem-vindo</h1>
      <p class="lead">Faça login ou crie sua conta abaixo</p>
    </div>
  </div>

  <%- include('includes/messages') %>

  <div class="row">
    <div class="col-lg my-2">
      <h4 class="text-center">Cadastro</h4>
      <p>Faça seu cadastro no sistema:</p>
      <form class= 'form-cadastro'action="/login/register" method="POST">
        <input type="hidden" name="_csrf" value=<%= csrfToken %>>
        <div class="form-group my-2">
          <label>Email</label>
          <input
            type="email"
            class="form-control"
            name="email"
          />
        </div>
        <div class="form-group my-2">
          <label>Senha</label>
          <input
            type="password"
            class="form-control"
            name="password"
          />
        </div>
        <button type="submit" class="btn btn-primary">Cadastrar</button>
      </form>
    </div>

    <div class="col-lg my-2 ">
      <h4 class="text-center">Login</h4>
      <p>Se você já possui cadastro no sistema, faça login abaixo:</p>
      <form class='form-login' action="/login/login" method="POST">
        <input type="hidden" name="_csrf" value=<%= csrfToken %>>
        <div class="form-group my-2">
          <label>Email</label>
          <input
            type="email"
            class="form-control"
            name="email"
          />
        </div>
        <div class="form-group my-2">
          <label>Senha</label>
          <input
            type="password"
            class="form-control"
            name="password"
          />
        </div>
        <button type="submit" class="btn btn-primary">Entrar</button>
      </form>
    </div>
  </div>
</div>

<%- include('includes/footer') %>